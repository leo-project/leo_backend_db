{require_otp_vsn, "R16B*|17"}.

{deps, [
        {leo_commons, ".*", {git, "https://github.com/leo-project/leo_commons.git", {tag, "1.1.6" }}},
        {bitcask,     ".*", {git, "https://github.com/basho/bitcask.git",           {tag, "2.0.1" }}},
        {eleveldb,    ".*", {git, "https://github.com/basho/eleveldb.git",          {tag, "2.1.4"}}},
        {meck,        ".*", {git, "https://github.com/eproxus/meck.git",            {tag, "0.8.2" }}},
        {proper,      ".*", {git, "https://github.com/manopapad/proper.git", "7d535ac61e9c2a9a7616af4615c39595a3c5739f"}}
       ]}.

{erl_opts, [{d, 'NOTEST'},
            warn_obsolete_guard,
            warnings_as_errors,
            warn_shadow_vars
           ]}.
{xref_checks, [undefined_function_calls]}.
{cover_enabled, true}.
{clean_files, []}.
